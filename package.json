{
  "name": "Shooter-Game",
  "version": "1.0.0",

  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "setupFilesAfterEnv": [
      "jest-expect-subclass"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/test/mocks/styleMock.js",
      "\\.(gif|ttf|eot|svg|png)$": "<rootDir>/test/mocks/fileMock.js"
    }
  },
  "scripts": {
    "dev": "webpack --mode development",
    "build": "webpack --mode production",
    "test": "jest --env=jsdom",
    "eslint": "eslint .",
    "start": "webpack server --mode development --open"
  },
  "description": "Space Shooter game with Phaser and JavaScript",
  "repository": "git@github.com:Nasa28/Shooter-Game.git",
  "author": "Nasa28 <kaluchinasaagu@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "phaser": "^3.55.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "babel-eslint": "10.x",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "14.x",
    "eslint-plugin-import": "2.x",
    "jest": "^27.2.1",
    "jest-canvas-mock": "^2.3.1",
    "style-loader": "^3.2.1",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.0"
  }
}
